wget -O proxyrusty8192versaofinal.zip "https://www.dropbox.com/scl/fi/6lz4jti0jsv4zievrq7to/proxyrusty8192versaofinal.zip?rlkey=yjfodyncb9nbfa87sqc74h725&st=6dmnuo8i&dl=1" && \
